<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Si ce n'est pas un fichier existant ET ce n'est pas le dossier public
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_URI} !^/public/ [NC]
    
    # Rediriger TOUTES les requÃªtes vers public/index.php (sauf public/)
    RewriteRule ^(.*)$ public/index.php [QSA,L]
</IfModule>
